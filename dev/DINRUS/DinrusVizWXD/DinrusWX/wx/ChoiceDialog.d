export class ДиалогЕдиничногоВыбора : Диалог
{
    enum
    {
        СТИЛЬ_ДИАЛОГА_ВЫБОРА	= (ДЕФ_СТИЛЬ_ДИАЛОГА | ПЕРЕМЕР_ГРАНИЦ | ОК | ОТМЕНА | ЦЕНТР)
    }
    public const цел ВысотаВыбора = 150;
    public const цел ШиринаВыбора  = 200;


    // TODO: ДанныеКлиента... !?!

    export this(ЦелУкз вхобъ)
    {
        super(вхобъ);
    }

    export  this(Окно родитель, ткст сообщение, ткст заголовок, ткст[] выборы, ДанныеКлиента данныеКлиента = пусто, цел стиль =  СТИЛЬ_ДИАЛОГА_ВЫБОРА, Точка поз = ДЕФПОЗ)
    {
        super(wxSingleChoiceDialog_ctor(ВизОбъект.безопУк(родитель), сообщение, заголовок, выборы.length, cast(ткст0)выборы.ptr, ВизОбъект.безопУк(данныеКлиента), стиль, поз));
    }

    //-----------------------------------------------------------------------------

    export проц выделение(цел выдл)
    {
        wxSingleChoiceDialog_SetSelection(this.м_вхобъ, выдл);
    }

    //-----------------------------------------------------------------------------

    export цел выделение()
    {
        return wxSingleChoiceDialog_GetSelection(this.м_вхобъ);
    }

    //-----------------------------------------------------------------------------

    export ткст выделениеТекста()
    {
        return cast(ткст) new ВизТкст(wxSingleChoiceDialog_GetStringSelection(this.м_вхобъ), да);
    }

    //-----------------------------------------------------------------------------

    export ДанныеКлиента данныеКлиентаВыделения()
    {
        return cast(ДанныеКлиента)найдиОбъект(wxSingleChoiceDialog_GetSelectionClientData(this.м_вхобъ));
    }
}

