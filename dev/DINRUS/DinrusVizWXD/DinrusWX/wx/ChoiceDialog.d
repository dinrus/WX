}

export цел[] дайМножественныеВыборы(ткст сообщение, ткст заголовок, ткст[] выборы, Окно родитель = пусто, цел x = -1, цел y= -1, бул центр = да, цел ширь = ДиалогЕдиничногоВыбора.ШиринаВыбора, цел высь = ДиалогЕдиничногоВыбора.ВысотаВыбора)
{
    ЦелМассив ari = new ЦелМассив();
    бцел рм = wxGetMultipleChoices_func(ВизОбъект.безопУк(ari), сообщение, заголовок, выборы.length, cast(ткст0) выборы.ptr, ВизОбъект.безопУк(родитель), x, y, центр, ширь, высь);
    return ari.вМассив();
}
