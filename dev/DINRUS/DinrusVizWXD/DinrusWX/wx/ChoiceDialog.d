export ткст дайЕдиничныйВыбор(ткст сообщение, ткст заголовок, ткст[] выборы, Окно родитель = пусто, цел x = -1, цел y= -1, бул центр = да, цел ширь = ДиалогЕдиничногоВыбора.ШиринаВыбора, цел высь = ДиалогЕдиничногоВыбора.ВысотаВыбора)
{
    return cast(ткст) new ВизТкст(wxGetSingleChoice_func(сообщение, заголовок, выборы.length, cast(ткст0) выборы.ptr, ВизОбъект.безопУк(родитель), x, y, центр, ширь, высь), да);
}

export цел дайИндексЕдиничногоВыбора(ткст сообщение, ткст заголовок, ткст[] выборы, Окно родитель = пусто, цел x = -1, цел y= -1, бул центр = да, цел ширь = ДиалогЕдиничногоВыбора.ШиринаВыбора, цел высь = ДиалогЕдиничногоВыбора.ВысотаВыбора)
{
