export class Листбук : Контрол
{
    public const цел ДЕФОЛТ		= 0;
    public const цел ВЕРХ		= 0x1;
    public const цел НИЗ		= 0x2;
    public const цел ЛЕВО		= 0x4;
    public const цел ПРАВО		= 0x8;
    public const цел РАСКЛАД_ПО_МАСКЕ	= 0xf;

    //-----------------------------------------------------------------------------

    export this(ЦелУкз вхобъ)
    {
        super(вхобъ);
    }

    export this()
    {
        super(wxListbook_ctor());
    }

    export this(Окно родитель, цел ид, Точка поз = ДЕФПОЗ, Размер размер = ДЕФРАЗМ, цел стиль = 0, ткст имя = "")
    {
        super(wxListbook_ctor());
        wxListbook_Create(вхобъ, ВизОбъект.безопУк(родитель), ид, поз, размер, cast(бцел)стиль, имя);
    }

    export static ВизОбъект Нов(ЦелУкз вхобъ)
    {
        return new Листбук(вхобъ);
    }

    //---------------------------------------------------------------------
    // ctors with сам created ид

    export this(Окно родитель, Точка поз = ДЕФПОЗ, Размер размер = ДЕФРАЗМ, цел стиль = 0, ткст имя = "")
    {
        this(родитель, Окно.уникИд, поз, размер, стиль, имя);
    }

    //-----------------------------------------------------------------------------

    export цел выделение()
    {
        return wxListbook_GetSelection(вхобъ);
    }
    export проц выделение(цел значение)
    {
        wxListbook_SetSelection(вхобъ, значение);
    }

    //-----------------------------------------------------------------------------

    export бул устТекстСтраницы(цел ч, ткст стрТекст)
    {
        return wxListbook_SetPageText(вхобъ, ч, стрТекст);
    }

    //-----------------------------------------------------------------------------

    export ткст дайТекстСтраницы(цел ч)
    {
        return cast(ткст) new ВизТкст(wxListbook_GetPageText(вхобъ, ч), да);
    }

    //-----------------------------------------------------------------------------

    export цел дайРисунокСтраницы(цел ч)
    {
        return wxListbook_GetPageImage(вхобъ, ч);
    }

    //-----------------------------------------------------------------------------

    export бул устРисунокСтраницы(цел ч, цел идРисунка)
    {
        return wxListbook_SetPageImage(вхобъ, ч, идРисунка);
    }

    //-----------------------------------------------------------------------------

    export Размер вычислиРазмерИзСтраницы(Размер стрРазм)
    {
        Размер т;
        wxListbook_CalcSizeFromPage(вхобъ, стрРазм, т);
        return т;
    }

    //-----------------------------------------------------------------------------


    export бул вставьСтраницу(цел ч, Окно страница, ткст текст)
    {
        return вставьСтраницу(ч, страница, текст, нет, -1);
    }


    export бул вставьСтраницу(цел ч, Окно страница, ткст текст, бул выделить)
    {
        return вставьСтраницу(ч, страница, текст, выделить, -1);
    }

    export бул вставьСтраницу(цел ч, Окно страница, ткст текст, бул выделить, цел идРисунка)
    {
        return wxListbook_InsertPage(вхобъ, ч, ВизОбъект.безопУк(страница), текст, выделить, идРисунка);
    }

    //-----------------------------------------------------------------------------

    export проц списокРисунков(СписокРисунков значение)
    {
        wxListbook_SetImageList(вхобъ, ВизОбъект.безопУк(значение));
    }
    export СписокРисунков списокРисунков()
    {
        return cast(СписокРисунков)найдиОбъект(wxListbook_GetImageList(вхобъ), &СписокРисунков.Нов);
    }

    //-----------------------------------------------------------------------------

    export бул вертикален()
    {
        return wxListbook_IsVertical(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export цел счётСтраниц()
    {
        return wxListbook_GetPageCount(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export Окно дайСтраницу(цел ч)
    {
        //	return cast(Окно)найдиОбъект(wxListbook_GetPage(вхобъ, ч), &Окно.Нов);
        ЦелУкз ptr = wxListbook_GetPage(вхобъ, ч);
        ВизОбъект o = найдиОбъект(ptr);
        if (o) return cast(Окно)o;
        else return new Окно(ptr);
    }

    //-----------------------------------------------------------------------------

    export проц присвойСписокРисунков(СписокРисунков списокРисунков)
    {
        wxListbook_AssignImageList(вхобъ, ВизОбъект.безопУк(списокРисунков));
    }

    //-----------------------------------------------------------------------------

    export проц размерСтраницы(Размер значение)
    {
        wxListbook_SetPageSize(вхобъ, значение);
    }

    //-----------------------------------------------------------------------------

    export бул удалиСтраницу(цел члоСтр)
    {
        return wxListbook_DeletePage(вхобъ, члоСтр);
    }

    //-----------------------------------------------------------------------------

    export бул удалиСтраницу2(цел члоСтр)
    {
        return wxListbook_RemovePage(вхобъ, члоСтр);
    }

    //-----------------------------------------------------------------------------

    export бул удалиВсеСтраницы()
    {
        return wxListbook_DeleteAllPages(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export бул добавьСтраницу(Окно страница, ткст текст, бул выделить, цел идРисунка)
    {
        return wxListbook_AddPage(вхобъ, ВизОбъект.безопУк(страница), текст, выделить, идРисунка);
    }

    //-----------------------------------------------------------------------------

    export проц продвиньВыделение(бул вперёд)
    {
        wxListbook_AdvanceSelection(вхобъ, вперёд);
    }

    //-----------------------------------------------------------------------------

    export проц PageChange_Add(ДатчикСобытий значение)
    {
        добавьДатчикКоманд(Событие.Тип.СОБ_КОМАНДА_СТРАНИЦА_ЛИСТБУКА_ИЗМЕНЕНА, ид, значение, this);
    }
    export проц PageChange_Remove(ДатчикСобытий значение)
    {
        удалиОбработчик(значение, this);
    }

    export проц PageChanging_Add(ДатчикСобытий значение)
    {
        добавьДатчикКоманд(Событие.Тип.СОБ_КОМАНДА_СТРАНИЦА_ЛИСТБУКА_ИЗМЕНЯЕТСЯ, ид, значение, this);
    }
    export проц PageChanging_Remove(ДатчикСобытий значение)
    {
        удалиОбработчик(значение, this);
    }
}

