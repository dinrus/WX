export class СобытиеЛистбука : Событие
{
    export this(ЦелУкз вхобъ)
    {
        super(вхобъ);
    }

    export this(ТипСобытия типКоманды, цел ид, цел члоВыб, цел члоСтарВыб)
    {
        super(wxListbookEvent_ctor(типКоманды, ид, члоВыб, члоСтарВыб));
    }

    static Событие Нов(ЦелУкз ptr)
    {
        return new СобытиеЛистбука(ptr);
    }
    //-----------------------------------------------------------------------------

    export цел выделение()
    {
        return wxListbookEvent_GetSelection(вхобъ);
    }
    export проц выделение(цел значение)
    {
        wxListbookEvent_SetSelection(вхобъ, значение);
    }

    //-----------------------------------------------------------------------------

    export цел старВыделение()
    {
        return wxListbookEvent_GetOldSelection(вхобъ);
    }
    export проц старВыделение(цел значение)
    {
        wxListbookEvent_SetOldSelection(вхобъ, значение);
    }

    //-----------------------------------------------------------------------------

    export проц запрет()
    {
        wxListbookEvent_Veto(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export проц позволить()
    {
        wxListbookEvent_Allow(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export бул позволено()
    {
        return wxListbookEvent_IsAllowed(вхобъ);
    }

    static this()
    {
        Событие.Тип.СОБ_КОМАНДА_СТРАНИЦА_ЛИСТБУКА_ИЗМЕНЕНА = wxEvent_EVT_COMMAND_LISTBOOK_PAGE_CHANGED();
        Событие.Тип.СОБ_КОМАНДА_СТРАНИЦА_ЛИСТБУКА_ИЗМЕНЯЕТСЯ = wxEvent_EVT_COMMAND_LISTBOOK_PAGE_CHANGING();

        добавьТипСоб (Событие.Тип.СОБ_КОМАНДА_СТРАНИЦА_ЛИСТБУКА_ИЗМЕНЕНА, &СобытиеЛистбука.Нов);
        добавьТипСоб (Событие.Тип.СОБ_КОМАНДА_СТРАНИЦА_ЛИСТБУКА_ИЗМЕНЯЕТСЯ, &СобытиеЛистбука.Нов);
    }
}

