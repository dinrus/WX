//! \cond EXTERN
extern (C) ЦелУкз wxSpinEvent_ctor(цел типКоманды, цел ид);
extern (C) цел wxSpinEvent_GetPosition(ЦелУкз сам);
extern (C) проц wxSpinEvent_SetPosition(ЦелУкз сам, цел поз);
extern (C) проц wxSpinEvent_Veto(ЦелУкз сам);
extern (C) проц wxSpinEvent_Allow(ЦелУкз сам);
extern (C) бул wxSpinEvent_IsAllowed(ЦелУкз сам);
//! \endcond

//-----------------------------------------------------------------------------

export class СобытиеСпина : СобытиеКоманды
{
    export this(ЦелУкз вхобъ)
    {
        super(вхобъ);
    }

    export this(цел типКоманды, цел ид)
    {
        super(wxSpinEvent_ctor(типКоманды, ид));
    }

    //-----------------------------------------------------------------------------

    export цел позиция()
    {
        return wxSpinEvent_GetPosition(вхобъ);
    }
    export проц позиция(цел значение)
    {
        wxSpinEvent_SetPosition(вхобъ, значение);
    }

    //-----------------------------------------------------------------------------

    export проц запрет()
    {
        wxSpinEvent_Veto(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export проц позволить()
    {
        wxSpinEvent_Allow(вхобъ);
    }

    //-----------------------------------------------------------------------------

    export бул позволено()
    {
        return wxSpinEvent_IsAllowed(вхобъ);
    }

    private static Событие Нов(ЦелУкз объ)
    {
        return new СобытиеСпина(объ);
    }

    static this()
    {
        добавьТипСоб(super.Тип.СОБ_СКРОЛЛ_ТУМБТРЭК,               &СобытиеСпина.Нов);
        добавьТипСоб(super.Тип.СОБ_СКРОЛЛ_СТРОКОЙ_ВЫШЕ,                   &СобытиеСпина.Нов);
        добавьТипСоб(super.Тип.СОБ_СКРОЛЛ_СТРОКОЙ_НИЖЕ,                 &СобытиеСпина.Нов);
    }
}

