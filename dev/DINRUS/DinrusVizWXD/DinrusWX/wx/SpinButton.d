//---------------------------------------------------------------------
export class СпинКнопка : Контрол
{
    // These are duplicated in СпинКтрл.cs (for easier access)
    enum
    {
        ГОРИЗОНТАЛЬНАЯ       = ПОриентация.Горизонталь,
        ВЕРТИКАЛЬНАЯ         = ПОриентация.Вертикаль,
        КЛЮЧИ_СТРЕЛКИ       = 0x1000,
        РЭП             = 0x2000,
    }

    public const ткст СтрИмениСпинКнопки = "СпинКнопка";
    //---------------------------------------------------------------------


    export this(ЦелУкз вхобъ)
    {
        super(вхобъ);
    }

    export this()
    {
        super(wxSpinButton_ctor());
    }

    export this(Окно родитель, цел ид /*= ЛЮБОЙ*/, Точка поз = ДЕФПОЗ, Размер размер = ДЕФРАЗМ, цел стиль = ВЕРТИКАЛЬНАЯ | КЛЮЧИ_СТРЕЛКИ, ткст имя = СтрИмениСпинКнопки)
    {
        super(wxSpinButton_ctor());
        if(!создай(родитель, ид, поз, размер, стиль, имя))
        {
            throw new ИсклНевернОперации("Не удалось создать СпинКнопку");
        }
    }

    export static ВизОбъект Нов(ЦелУкз вхобъ)
    {
        return new СпинКнопка(вхобъ);
    }

    //---------------------------------------------------------------------
    // ctors with сам created ид

    export this(Окно родитель, Точка поз = ДЕФПОЗ, Размер размер = ДЕФРАЗМ, цел стиль = ВЕРТИКАЛЬНАЯ | КЛЮЧИ_СТРЕЛКИ, ткст имя = СтрИмениСпинКнопки)
    {
        this(родитель, Окно.уникИд, поз, размер, стиль, имя);
    }

    //---------------------------------------------------------------------

    export бул создай(Окно родитель, цел ид, inout Точка поз, inout Размер размер,  цел стиль, ткст имя)
    {
        return wxSpinButton_Create(вхобъ, ВизОбъект.безопУк(родитель), ид,
                                   поз, размер, cast(бцел)стиль, имя);
    }

    //---------------------------------------------------------------------

    export цел значение()
    {
        return wxSpinButton_GetValue(вхобъ);
    }
    export проц значение(цел значение)
    {
        wxSpinButton_SetValue(вхобъ, значение);
    }

    //---------------------------------------------------------------------

    export цел макс()
    {
        return wxSpinButton_GetMax(вхобъ);
    }

    export цел мин()
    {
        return wxSpinButton_GetMin(вхобъ);
    }

    export проц устДиапазон(цел мин, цел макс)
    {
        wxSpinButton_SetRange(вхобъ, мин, макс);
    }
}
