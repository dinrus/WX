extern (C) бул   wxSpinButton_Create(ЦелУкз сам, ЦелУкз родитель, цел ид, inout Точка поз, inout Размер размер, бцел стиль, ткст имя);
extern (C) цел    wxSpinButton_GetValue(ЦелУкз сам);
